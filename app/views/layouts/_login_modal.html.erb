<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
                            
            <div class="container" style="margin-top:40px">
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading" style="text-align: center;">
                                <strong> Login in to Your Account</strong>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            </div>
                            <div class="panel-body">
                                <%= form_tag("/users/post_login_ajax", :method => "post", role: "form", :id => 'loginSubmit') do %>
                                    <fieldset>
                                         <div class="row text-center  text-danger" id="error-message" style="padding-bottom:15px;"></div> 
                                        <div class="row">
                                            <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="glyphicon glyphicon-user"></i>
                                                        </span> 
                                                        <%= text_field_tag('login_name',nil, class: 'form-control', :placeholder => "Username") %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="glyphicon glyphicon-lock"></i>
                                                        </span>
                                                        <%= password_field_tag('password', nil, class: 'form-control', :placeholder => "Password") %>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <%= submit_tag("Sign in", :class => "btn btn-lg btn-danger btn-block ") %>
                                                    <%= javascript_tag "
                                                      ajaxFormSubmit('/users/post_login_ajax', 'loginSubmit', function(data) {
                                                        var response = JSON.parse(data);
                                                        if (response.status === 'SUCCESS') {
                                                          var link = document.createElement('a');
                                                          link.href = '/search/lookup';
                                                          link.click();
                                                          } else {
                                                            $('div#error-message').text(response.message);
                                                          }
                                                      });
                                                    "%>
                                                </div>
                                                <%= link_to("Forgot your password?", :controller => "users", :action => "forgot_password") %>
                                            </div>
                                        </div>
                                        
                                    </fieldset>
                                <% end %>
                            </div>
                            <div class="panel-footer ">
                                <p>Don't have an account with us yet? <br> <%= link_to("Register Here Now!", :controller => "users", :action => "new") %></p>
                            </div>
                         </div>
                    </div>
                </div>
            </div>

    </div>
    </div>
</div>
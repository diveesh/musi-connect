<% content_for :title, "Login" %>
<link rel="stylesheet" href="<%= asset_path('stylesheets/users.css') %>">


<p class="error"><%= flash[:err] %></p>
<p class="successful_signup"><%= flash[:successful_signup] %></p>
<h2>Login</h2>
<%= form_tag("post_login", :method => "post", role: "form") do %>
    <div class="form-group" >
        <%= label_tag(:login_name, "Login Name", class: 'col-sm-1 control-label') %>
        <div class='col-sm-4'>
            <%= text_field_tag 'login_name',nil, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= label_tag(:password, "Password", class: 'col-sm-1 control-label') %>
        <div class='col-sm-4'>
            <%= password_field_tag('password', nil, class: 'form-control') %>
        </div>
    </div>
    <p><%= submit_tag("Login") %></p>
<% end %>
<p>Don't have an account with us yet? <%= link_to("Register Here Now!", {action: "new"}) %></p>
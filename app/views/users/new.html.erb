<% content_for :title, "Register new user" %>
<% content_for :stylesheet, (stylesheet_link_tag "users") %>
<p class="error"><%= flash[:err] %></p>
<% if flash[:error_messages] %>
    <% flash[:error_messages].each do |msg| %>
        <p class="error"><%= msg %></p>
    <% end %>
<% end %>

<%= form_tag(action: "create",  :method => "post") do %>
    <p><%= label_tag(:first_name, "First Name") %>
    <%= text_field_tag(:first_name) %></p>
    <p><%= label_tag(:last_name, "Last Name") %>
    <%= text_field_tag(:last_name) %></p>
    <p><%= label_tag(:email_address, "Email Address") %>
    <%= text_field_tag(:email_address) %></p>
    <p><%= label_tag(:login_id, "Login Name") %>
    <%= text_field_tag(:login_id) %></p>
    <p><%= label_tag(:password, "Password") %>
    <%= password_field_tag(:password) %></p>
    <p><%= label_tag(:confirm_password, "Confirm Password") %>
    <%= password_field_tag(:confirm_password) %></p>
    <p><%= submit_tag("Register") %></p>
<% end %>

